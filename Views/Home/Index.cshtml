@using e_commercee.Viewmodels;
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach(var product in Model.Products){

            <div class="col mb-5">
                <div class="card h-100">
                 
                 
                    <!-- Product image-->
                    <img class="card-img-top" src="@product.Image" alt="..." style="width:200px; height:200px;" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@product.Name</h5>
                           <p>@product.Description</p>
                           <h3>@product.Price</h3>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div  class="text-center">
                                <a asp-Controller ="Cart" asp-action="AddtoCart" asp-route-productId="@product.Id" class="btn btn-outline-dark mt-auto">Add To Cart</a>
                            </div>
                    </div>
                </div>
            
            </div>
            }
          
        </div>
    </div>
</section>
